{
  "info": {
    "_postman_id": "d5e1e0c0-4567-4c9d-b123-f4567aaaa999",
    "name": "GreenReport Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin/Worker)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "http://localhost:3000/api/auth/login" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gmail.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Public Reports",
      "item": [
        {
          "name": "Create Report",
          "request": {
            "method": "POST",
            "header": [],
            "url": { "raw": "http://localhost:3000/api/reports/create" },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file" },
                { "key": "description", "value": "Garbage near road" },
                { "key": "city", "value": "Gwalior" },
                { "key": "lat", "value": "26.2124" },
                { "key": "lng", "value": "78.1772" },
                { "key": "severity", "value": "High" }
              ]
            }
          }
        },
        {
          "name": "Get All Reports (Map)",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "http://localhost:3000/api/reports/all" }
          }
        },
        {
          "name": "Track Report by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/reports/track/{{reportId}}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Create Worker",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "http://localhost:3000/api/admin/create-worker" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Worker One\",\n  \"email\": \"worker1@mail.com\",\n  \"password\": \"123456\",\n  \"city\": \"Gwalior\"\n}"
            }
          }
        },
        {
          "name": "Admin: Get All Reports",
          "request": {
            "method": "GET",
            "header": [{
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }],
            "url": { "raw": "http://localhost:3000/api/admin/reports" }
          }
        },
        {
          "name": "Admin: Update Report Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "http://localhost:3000/api/admin/report/status/{{reportId}}" },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Declined\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Worker",
      "item": [
        {
          "name": "Worker: Get Assigned Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{workerToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/worker/assigned"
            }
          }
        },
        {
          "name": "Worker: Update Report (Complete/Declined)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
               "value": "Bearer {{workerToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/worker/update/{{reportId}}"
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "status", "value": "Completed" },
                { "key": "workerNotes", "value": "Area cleaned successfully" },
                { "key": "image", "type": "file" }
              ]
            }
          }
        }
      ]
    }
  ]
}
